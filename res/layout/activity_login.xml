<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:paddingTop="40dp"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="30sp" android:textColor="@color/black" android:gravity="center" android:text="用户登录"/>
    <LinearLayout android:layout_width="match_parent" android:padding="5dp" android:orientation="horizontal" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:textColor="@color/black" android:textSize="18dp" android:layout_height="match_parent" android:gravity="center_vertical" android:text="帐号:"/>
        <EditText android:textColor="@color/black" android:singleLine="true" android:paddingLeft="10dp" android:hint="请输入帐号" android:background="#99DDDDDD" android:id="@+id/et_name" android:layout_width="0dp"  android:layout_weight="1" android:layout_height="match_parent" android:gravity="center_vertical" />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:padding="5dp" android:orientation="horizontal" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:textColor="@color/black" android:textSize="18dp" android:layout_height="match_parent" android:gravity="center_vertical" android:text="密码:"/>
        <EditText android:textColor="@color/black" android:paddingLeft="10dp" android:singleLine="true" android:hint="请输入密码" android:inputType="textPassword" android:id="@+id/et_password" android:layout_width="0dp" android:background="#99DDDDDD" android:layout_weight="1" android:layout_height="match_parent" android:gravity="center_vertical" />
    </LinearLayout>
    <Button android:id="@+id/btn_login" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="登录"/>

</LinearLayout>